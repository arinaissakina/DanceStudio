@model DanceStudio.Models.Group

@{
    ViewData["Title"] = "Edit";
}

<br/>
<p class="title is-1 is-spaced">Edit</p>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="input is-primary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <label asp-for="CoachId" class="control-label"></label><br/>
                <div class="select is-primary">
                    <select asp-for="CoachId" class ="select is-primary" asp-items="ViewBag.CoachId"></select></div>
            </div><br/>
            <div class="form-group ">
                <label asp-for="DanceId" class="control-label"></label><br/>
                <div class="select is-primary">
                    <select asp-for="DanceId" class ="select is-primary" asp-items="ViewBag.DanceId"></select></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="button is-success is-rounded " style="float: right"/>
            </div>
        </form>
    </div>
</div>

    <br/><br/><br/>
<div>
    <a asp-action="Index" class="button is-rounded">Back to List</a>
</div><br/>

