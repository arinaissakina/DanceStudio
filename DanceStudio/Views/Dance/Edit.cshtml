@model DanceStudio.Models.Dance

@{
    ViewData["Title"] = "Edit";
}

<br/>
<p class="title is-1 is-spaced">Edit</p>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="field">
                    <div class="control">
                        <input asp-for="Name" class="input is-primary" type="text" placeholder="Primary input">
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="button is-primary is-rounded" style="float: right"/>
            </div>
        </form>
    </div>
</div>

    <br/><br/><br/>
<div>
    <a asp-action="Index" class="button is-rounded">Back to List</a>
</div><br/>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
